<% layout('layouts/boilerplate') %>
<div class=" row mt-3">
<div class="col-8 offset-3">
  <h3><%=listing.title%></h3>
</div>
</div>
  <div class="listing-show-container">
    <% if (listing.image && listing.image.url) { %>
    <div class="listing-image-wrapper">
      <img
        src="<%= listing.image.url %>"
        alt="<%= listing.title %>"
        class="listing-image"
      />
    </div>
    <% } %>
    <h1 class="listing-title"><%= listing.title %></h1>
    <div class="listing-details">
      <p class="listing-owner"><b>Posted by: </b><i><%= listing.owner ? listing.owner.username : 'Unknown' %></i></p>
      <p class="listing-description"><%= listing.description %></p>
      <p class="listing-price">
        Price: &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="listing-location">Location: <%= listing.location %></p>
      <p class="listing-country">Country: <%= listing.country %></p>
    </div>
    <% if(currUser){ %>
    <div class="listing-actions">
      
      <a class="btn edit-btn" href="/listings/<%= listing._id %>/edit"
        >✏️ Edit this listing</a
      >
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn delete-btn" type="submit">
          🗑️ Delete this listing
        </button>
      </form>
    </div>
    <% } %>
    
    <% if(currUser){ %>
    <div class="col-9 offset-1 mt-5 mb-5">
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
         <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
  <input type="radio" 
  id="no-rate" 
  class="input-no-rate"
   name="review[rating]" 
   value="1"
    checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rreview[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
        </div>
        <div class="mb-3 mt-3">
        <label for="comment">Comments</label>
        <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control" required></textarea>
       <div class="invalid-feedback">Please write a comment</div>
      </div>
        <button type="submit" class="btn btn-outline-dark">Submit Review</button>
      </form>

    <% } %>
      <hr>
      <h4 class="mb-3">Reviews</h4>
<div class="row">
  <% for (let review of listing.reviews) { %>
    <div class="col-5 ms-4 mb-4">
      <div class="card shadow-sm border-0 rounded-3 h-100">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">
            By: <i><%= review.author ? review.author.username : 'Unknown' %></i>
          </h6>

          <p class="starability-result" data-rating="<%= review.rating %>"></p>

          <p class="card-text text-muted">
            <%= review.comment %>
          </p>
          <form  class = "mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
          <button class="btn btn-outline-dark">Delete</button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</div>

    </div>
  </div>