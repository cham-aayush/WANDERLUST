<% layout('layouts/boilerplate') %>
<body>
    <div class="form-container">
        <h1>Create New Listing</h1>
        <form class="listing-form" method="POST" action="/listings">
            <label for="title">Title</label>
            <input id="title" name="listing[title]" type="text" placeholder="Enter listing title" required>

            <label for="description">Description</label>
            <textarea id="description" name="listing[description]" placeholder="Write a short description..." required></textarea>

            <label for="image">Image URL</label>
            <input id="image" name="listing[image]" type="url" placeholder="https://example.com/image.jpg">

            <label for="price">Price ($)</label>
            <input id="price" name="listing[price]" type="number" placeholder="Enter price" min="0" required>

            <label for="country">Country</label>
            <input id="country" name="listing[country]" type="text" placeholder="Enter country" required>

            <label for="location">Location</label>
            <input id="location" name="listing[location]" type="text" placeholder="Enter location" required>

            <button type="submit">Create Listing</button>
        </form>
    </div>
</body>
